<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="222.0" prefWidth="415.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="pressarrowgame.LoginController">
   <children>
      <VBox prefHeight="243.0" prefWidth="432.0">
         <children>
            <HBox prefHeight="76.0" prefWidth="458.0">
               <children>
                  <Label text="Player Name :">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="nameField">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="enterName" mnemonicParsing="false" onAction="#handleEnter" text="Enter">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
            </HBox>
            <Button fx:id="easyMode" alignment="CENTER" mnemonicParsing="false" text="Easy Mode" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="160.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="hardMode" mnemonicParsing="false" onAction="#hardClicked" text="Hard Mode">
               <VBox.margin>
                  <Insets left="160.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="txtHint" text="Please input your name" textFill="#ff0505">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="80.0" top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
